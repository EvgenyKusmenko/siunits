package de.monticore.lang.types;

/* Alpha-version: This is intended to become a MontiCore stable grammar. */

/**
 * This grammar is one way to represent the type of a primitive 
 * combined with a SI unit type.
 * The primitive part should always be a numeric type.
 */

// TODO: umbenennung in SIUnitTypes4Computing ?
// Und Positionierung als Alternative (die nicht auf SIUnitTypes4Math basiert)

component grammar PrimitiveWithSIUnitTypes extends 
        de.monticore.types.MCBasicTypes, 
        de.monticore.lang.types.SIUnitTypes     {

    interface PrimitiveWithSIUnitTypeInt extends MCObjectType =
        primitiveType:MCPrimitiveType siunitType:SIUnitType;

// TODO: wir sind uns hier ja syntaktisch noch nicht einig
// bzw. Ã¼berlegen noch? siehe unten?
    PrimitiveWithSIUnitType implements PrimitiveWithSIUnitTypeInt =
        primitiveType:MCPrimitiveType "in" siunitType:SIUnitType;

